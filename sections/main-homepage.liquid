<style>

div.field__header.clicked {
  border-bottom: 0.5px solid rgba(62, 41, 7, 0.5);
}

div.homepage.clicked {
  border-bottom: 0.5px solid white;
}

input.homepage[type=search] {
    color: black;
    -webkit-filter: invert(100%);
    filter: invert(100%);
}

input.homepage::placeholder {
  color: black;
  opacity: 1;
}

a.homepage {
  color: black;
  -webkit-filter: invert(100%);
  filter: invert(100%);
  opacity: 1;
}

span.homepage:before, span.homepage:after {
  background: white;
}

img.homepage {
  -webkit-filter: invert(100%);
  filter: invert(100%);
}

a.homepage  {
  color: black;
  -webkit-filter: invert(100%);
  filter: invert(100%);
  opacity: 1;
  -webkit-transition: all 0s ease-in;
    transition: all 0s ease-in;
}

@media only screen and (max-width: 750px) {
  hr.footer__line {
    margin-top: 0vh;
  }
}
</style>

<div class="subscribe" id="subscribeBox">
  <button class="close_button">&times;</button>
  <div class="form_box">
    {%- if section.settings.newsletter_enable -%}
        {%- if section.settings.newsletter_heading != blank -%}
          <p class="welcome__to__del__sol__salon">
            {% comment %} {{ section.settings.newsletter_heading | escape }} {% endcomment %}
            welcome to aqua mode
          </p>
        {%- endif -%}
        {%- form 'customer', id: 'ContactFooter', class: 'footer__newsletter newsletter-form' -%}
          <input type="hidden" name="contact[tags]" value="newsletter">
          <div class="newsletter-form__field-wrapper">
            <div class="field">
              <input
                id="NewsletterForm--{{ section.id }}"
                type="email"
                name="contact[email]"
                class="email_input"
                value="{{ form.email }}"
                aria-required="true"
                autocorrect="off"
                autocapitalize="off"
                autocomplete="email"
                {% if form.errors %}
                  autofocus
                  aria-invalid="true"
                  aria-describedby="ContactFooter-error"
                {% elsif form.posted_successfully? %}
                  aria-describedby="ContactFooter-success"
                {% endif %}
                placeholder="{{ 'newsletter.label' | t }}"
                required
              >
              <button type="submit" class="newsletter-form__button field__button" name="commit" id="Subscribe" aria-label="{{ 'newsletter.button_label' | t }}">
                {% render 'icon-arrow' %}
              </button>
            </div>
            {%- if form.errors -%}
              <small class="newsletter-form__message form__message" id="ContactFooter-error">{% render 'icon-error' %}{{ form.errors.translated_fields['email'] | capitalize }} {{ form.errors.messages['email'] }}</small>
            {%- endif -%}
          </div>
          {%- if form.posted_successfully? -%}
            <h3 class="newsletter-form__message newsletter-form__message--success form__message" id="ContactFooter-success" tabindex="-1" autofocus>{% render 'icon-success' %}{{ 'newsletter.success' | t }}</h3>
          {%- endif -%}
        {%- endform -%}
    {%- endif -%}
  </div>
</div>

<script src="{{ 'initalpage.js' | asset_url }}"></script>


