{{ 'stack-page.css' | asset_url | stylesheet_tag }}

<style>

.stack_media {
  cursor: none;
}
</style>

<style>
  @media (max-width: 700px) {
    .footer {
      border-top: 0.1rem solid rgba(var(--color-foreground), 0.00);
      margin: 0px;
      /* height: 65vh; */
      width: 100vw;
      position: relative;
      z-index: 10;
      background-color: white;
    }

    .flex__item__wrapper__middle {
      display: none;
    }

    .large__logo__container {
      display: none;
    }
  }
</style>

<div class="desktop" id="cursorText"><p class="coming__soon__text">COMING SOON</p></div>

<div class="mobile" id="mobileText"><p class="coming__soon__text">COMING SOON</p></div>

<video autoplay
       muted
       loop
       playsinline
       poster="{{ section.settings.video_image }}"
       class="stack_media"
>
   <source src="{{ section.settings.video | video_tag }}" type="video/mp4">
</video>

<script src="{{ 'cursor.js' | asset_url }}"></script>

{% schema %}
{
  "name": "Video",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Video section heading",
      "default": "Title"
    },
    {
      "type": "video",
      "id": "video",
      "label": "A Shopify-hosted video"
    }
  ],
  "presets": [
    {
      "name": "Hosted Video"
    }
  ]
}
{% endschema %}
