
<div class="video-section">
  <h2>{{ section.settings.heading }}</h2>
  {{ section.settings.video | video_tag }}
</div>

{% schema %}
{
  "name": "Video",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Video section heading",
      "default": "Title"
    },
    {
      "type": "video",
      "id": "video",
      "label": "A Shopify-hosted video"
    }
  ],
  "presets": [
    {
      "name": "Hosted Video"
    }
  ]
}
{% endschema %}
